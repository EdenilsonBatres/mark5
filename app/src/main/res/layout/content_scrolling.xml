        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/Mestaciones"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FDFDFE"
            android:contentDescription="@string/Mdesc"
            android:onClick="onClick"
