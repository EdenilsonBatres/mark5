<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1653"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".menusito"
    tools:showIn="@layout/app_bar_menusito">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/gesto_voz_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onclick"
            android:scaleType="fitEnd"
            android:tint="#FFF1EDED"
            app:layout_constraintEnd_toStartOf="@+id/texto_voz_btn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/gesto_texto_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/tres" />

        <ImageButton
            android:id="@+id/gesto_texto_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onclick"
            android:scaleType="fitEnd"
            android:tint="#F1EDED"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/dos" />

        <ImageButton
            android:id="@+id/texto_voz_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onclick"
            android:scaleType="fitEnd"
            android:tint="#FFF1EDED"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/cinco" />

        <ImageButton
            android:id="@+id/texto_gestos_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onclick"
            android:scaleType="fitEnd"
            android:tint="#FFF1EDED"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gesto_texto_btn"
            app:srcCompat="@mipmap/diesiseis" />

        <ImageButton
            android:id="@+id/vos_gesto_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onclick"
            android:scaleType="fitXY"
            android:tint="#FFF1EDED"
            app:layout_constraintEnd_toStartOf="@+id/voz_texto_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/texto_gestos_btn"
            app:layout_constraintTop_toBottomOf="@+id/gesto_voz_btn"
            app:srcCompat="@mipmap/icono" />

        <ImageButton
            android:id="@+id/voz_texto_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onclick"
            android:scaleType="fitCenter"
            android:tint="#FFF1EDED"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texto_voz_btn"
            app:srcCompat="@mipmap/ocho" />

        <ImageButton
            android:id="@+id/diccionario_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onclick"
            android:scaleType="fitEnd"
            android:tint="#FFF1EDED"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texto_gestos_btn"
            app:srcCompat="@mipmap/siete" />

        <ImageButton
            android:id="@+id/configuracion_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onclick"
            android:scaleType="fitEnd"
            android:tint="#FFF1EDED"
            app:layout_constraintEnd_toStartOf="@+id/consejos_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/diccionario_btn"
            app:layout_constraintTop_toBottomOf="@+id/vos_gesto_btn"
            app:srcCompat="@mipmap/doce" />

        <ImageButton
            android:id="@+id/consejos_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onclick"
            android:scaleType="fitEnd"
            android:tint="#FFF1EDED"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/voz_texto_btn"
            app:srcCompat="@mipmap/seis" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>