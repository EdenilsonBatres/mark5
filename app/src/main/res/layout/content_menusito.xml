<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1653"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".menusito"
    tools:showIn="@layout/app_bar_menusito">

    <TableLayout
        android:layout_width="395dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/gesto_voz_btn"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#2a93ff"
                android:contentDescription="@string/icono_menu"
                android:onClick="onclick"
                android:scaleType="fitEnd"
                android:tint="#F1EDED"
                app:srcCompat="@mipmap/dos" />

            <ImageButton
                android:id="@+id/gesto_texto_btn"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#2a93ff"
                android:contentDescription="@string/icono_menu"
                android:onClick="onclick"
                android:scaleType="fitEnd"
                android:tint="#FFF1EDED"
                app:srcCompat="@mipmap/tres" />

            <ImageButton
                android:id="@+id/texto_voz_btn"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#2a93ff"
                android:contentDescription="@string/icono_menu"
                android:onClick="onclick"
                android:scaleType="fitEnd"
                android:tint="#FFF1EDED"
                app:srcCompat="@mipmap/cinco" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/texto_gestos_btn"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#2a93ff"
                android:contentDescription="@string/icono_menu"
                android:onClick="onclick"
                android:scaleType="fitEnd"
                android:tint="#FFF1EDED"
                app:srcCompat="@mipmap/diesiseis" />

            <ImageButton
                android:id="@+id/vos_gesto_btn"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#2a93ff"
                android:contentDescription="@string/icono_menu"
                android:onClick="onclick"
                android:scaleType="fitEnd"
                android:tint="#FFF1EDED"
                app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

            <ImageButton
                android:id="@+id/voz_texto_btn"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#2a93ff"
                android:contentDescription="@string/icono_menu"
                android:onClick="onclick"
                android:scaleType="fitCenter"
                android:tint="#FFF1EDED"
                app:srcCompat="@mipmap/ocho" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/diccionario_btn"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#2a93ff"
                android:contentDescription="@string/icono_menu"
                android:onClick="onclick"
                android:scaleType="fitEnd"
                android:tint="#FFF1EDED"
                app:srcCompat="@mipmap/siete" />

            <ImageButton
                android:id="@+id/configuracion_btn"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#2a93ff"
                android:contentDescription="@string/icono_menu"
                android:onClick="onclick"
                android:scaleType="fitEnd"
                android:tint="#FFF1EDED"
                app:srcCompat="@mipmap/doce" />

            <ImageButton
                android:id="@+id/consejos_btn"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#2a93ff"
                android:contentDescription="@string/icono_menu"
                android:onClick="onclick"
                android:scaleType="fitEnd"
                android:tint="#FFF1EDED"
                app:srcCompat="@mipmap/seis" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>