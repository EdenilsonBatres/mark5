<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#192858"
    tools:context=".voz_gestos">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#111C53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="10dp"
            android:background="#111C53"

            android:onClick="a_menuprincipal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/volver" />

        <ImageButton
            android:id="@+id/btnPrin"
            android:layout_width="158dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="#111C53"

            android:scaleType="fitCenter"
            android:tint="#E1EAF1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.442"
            app:layout_constraintStart_toEndOf="@+id/btnPrincipal"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/icono" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        app:layout_constraintVertical_bias="0.175">

        <ImageButton
            android:id="@+id/B_familia"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/mdos" />

        <ImageButton
            android:id="@+id/B_animales"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/muno" />

        <ImageButton
            android:id="@+id/B_frutas"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/B_saludos"
            app:srcCompat="@mipmap/mtres" />

        <ImageButton
            android:id="@+id/B_estaciones"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/B_animales"
            app:srcCompat="@mipmap/mcuatro" />

        <ImageButton
            android:id="@+id/B_emociones"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@mipmap/mcinco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/B_estaciones"
            tools:srcCompat="@mipmap/mcinco" />

        <ImageButton
            android:id="@+id/B_saludos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/B_familia"
            app:srcCompat="@mipmap/mtrece" />

        <ImageButton
            android:id="@+id/B_profeciones"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitEnd"
            app:layout_constraintEnd_toStartOf="@+id/B_exprecionesFrecuentes"
            app:layout_constraintStart_toEndOf="@+id/B_preguntasFrecuentes"
            app:layout_constraintTop_toBottomOf="@+id/B_ropa"
            app:srcCompat="@mipmap/msiete" />

        <ImageButton
            android:id="@+id/B_ropa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitEnd"
            app:layout_constraintEnd_toStartOf="@+id/B_familia"
            app:layout_constraintStart_toEndOf="@+id/B_emociones"
            app:layout_constraintTop_toBottomOf="@+id/B_comida"
            app:srcCompat="@mipmap/mocho" />

        <ImageButton
            android:id="@+id/B_preguntasFrecuentes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/B_emociones"
            app:srcCompat="@mipmap/mdiez" />

        <ImageButton
            android:id="@+id/B_deportes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitEnd"
            app:layout_constraintEnd_toStartOf="@+id/B_frutas"
            app:layout_constraintStart_toEndOf="@+id/B_animales"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/monce" />

        <ImageButton
            android:id="@+id/B_comida"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitEnd"
            app:layout_constraintEnd_toStartOf="@+id/B_saludos"
            app:layout_constraintStart_toEndOf="@+id/B_estaciones"
            app:layout_constraintTop_toBottomOf="@+id/B_deportes"
            app:srcCompat="@mipmap/mdoce" />

        <ImageButton
            android:id="@+id/B_exprecionesFrecuentes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#2a93ff"
            android:contentDescription="@string/icono_menu"
            android:onClick="onClick"
            android:scaleType="fitEnd"
            android:src="@mipmap/mnueve"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/B_frutas"
            tools:srcCompat="@mipmap/mnueve" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>